<body>
    <%- include("./partials/nav.ejs") %>
  <h1><%- title %></h1>
  <!-- we will create a form to send data to backend and store into the database -->
  <div class="create-blog content">
    <form action="/blogs" method="post" style="display: inline-grid;">
      <label for="title">Product title:</label>
      <input type="text" id="title" name="title" required>
      <label for="snippet">Product Price:</label>
      <input type="text" id="snippet" name="snippet" required>
      <label for="body">Product Description:</label>
      <textarea id="body" name="body" required></textarea>
      <button>Submit</button>
    </form>
  </div>    
</body>
